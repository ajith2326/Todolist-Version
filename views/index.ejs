<%- include("header") -%>
<body>
    <div class="box" id="heading"><h1><%= day %></h1>
    </div>
    <div class="box">
    
    <% for(var i=0;i<items.length;i++){ %>
        <form action="/delete" method="POST">
        <div class="item">
            <input onchange="this.form.submit()" name="Checkbox" value="<%= items[i]._id %>" type="checkbox">
            <p><%=items[i].todo %></p>
        </div>
        </form>
    <% } %>
    <form class="item"action="/" method="POST">
        <input type="text" name="txt" placeholder="New item" autocomplete="off">
        <button type="submit" name="list" value=<%= day %>>+</button>
    </form>
    </div>
<%- include('footer') -%>